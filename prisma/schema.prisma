generator client {
  provider = "prisma-client-js"
  output   = "../src/prisma/client"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// MARK: User Plan

model Users {
  id            String        @id @default(cuid())
  email         String        @unique
  name          String
  createdAt     DateTime      @default(now())
  updatedAt     DateTime      @updatedAt
  routines      Routines[]
  sessions      Sessions[]
  exercises     Exercises[]
  muscles       Muscles[]
  notifications Notifications[]
  tracking      Tracking[]
}

model RoutineCycleTypes {
  id            String          @id
  name          String          @unique
  createdAt     DateTime        @default(now())
  updatedAt     DateTime        @updatedAt
  routines      Routines[]
}

model Routines {
  id              String            @id @default(uuid())
  userId          String
  routineCycleId  String
  active          Boolean           @default(true)
  days            Int               @default(7)
  initialDate     DateTime
  name            String
  description     String?
  createdAt       DateTime          @default(now())
  updatedAt       DateTime          @updatedAt
  user            Users             @relation(fields: [userId], references: [id])
  cycleType       RoutineCycleTypes @relation(fields: [routineCycleId], references: [id])
  routineDays     RoutineDays[]
}

model RoutineDays {
  id            String    @id @default(uuid())
  routineId     String    
  sessionId     String?   
  name          String    
  dayNumber     Int       
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  routine       Routines  @relation(fields: [routineId], references: [id])
  session       Sessions? @relation(fields: [sessionId], references: [id])
}

model Sessions {
  id            String           @id @default(uuid())
  userId        String
  name          String        @unique
  description   String?
  createdAt     DateTime      @default(now())
  updatedAt     DateTime      @updatedAt
  user          Users          @relation(fields: [userId], references: [id])
  exercises     Exercises[]
  routineDays   RoutineDays[]
}

model Exercises {
  id            String           @id @default(uuid())
  userId        String
  name          String        
  description   String?
  createdAt     DateTime      @default(now())
  updatedAt     DateTime      @updatedAt
  user          Users          @relation(fields: [userId], references: [id])
  sessions      Sessions[]
  muscles       Muscles[]
  initialStats  ExerciseInitialStats?
  trackedExercise TrackedExercises[]
}

model ExerciseInitialStats {
  id            String           @id @default(uuid())
  exerciseId    String           @unique
  sets          Int
  reps          Int
  weight        Int
  createdAt     DateTime      @default(now())
  updatedAt     DateTime      @updatedAt
  exercise      Exercises     @relation(fields: [exerciseId], references: [id])
}

// MARK: System tables

model Notifications {
  id              String                 @id @default(uuid())
  userId          String
  name            String              
  message         String
  createdAt       DateTime            @default(now())
  updatedAt       DateTime            @updatedAt
  user            Users                @relation(fields: [userId], references: [id])
}

model Status {
  id              String              @id
  name            String              @unique
  createdAt       DateTime            @default(now())
  updatedAt       DateTime            @updatedAt
  tracking        Tracking[]
  exercises       TrackedExercises[]
}

model DayTypes {
  id              String              @id
  name            String              @unique
  createdAt       DateTime            @default(now())
  updatedAt       DateTime            @updatedAt
  tracking        Tracking[]
}

model BodySections {
  id              Int                 @id @default(autoincrement())
  name            String              @unique
  createdAt       DateTime            @default(now())
  updatedAt       DateTime            @updatedAt
  muscularGroups  MuscularGroups[]
}

model MuscularGroups {
  id            Int         @id @default(autoincrement())
  bodySectionId Int
  name          String
  createdAt     DateTime    @default(now())
  updatedAt     DateTime    @updatedAt
  bodySection   BodySections @relation(fields: [bodySectionId], references: [id])
  muscles       Muscles[]
}

model Muscles {
  id              Int           @id @default(autoincrement())
  muscularGroupId Int
  userId          String
  name            String
  description     String?       
  createdAt       DateTime      @default(now())
  updatedAt       DateTime      @updatedAt
  user            Users @relation(fields: [userId], references: [id])
  muscularGroup   MuscularGroups @relation(fields: [muscularGroupId], references: [id])
  exercises       Exercises[]
}

// MARK: Tracking tables

model Tracking {
  id                    String                 @id @default(uuid())
  userId                String
  date                  DateTime
  status                String
  dayType               String
  notes                 String?
  createdAt             DateTime            @default(now())
  updatedAt             DateTime            @updatedAt
  user                  Users                @relation(fields: [userId], references: [id])
  fkStatus              Status              @relation(fields: [status], references: [id])
  fkDayType             DayTypes             @relation(fields: [dayType], references: [id])
  trackedExercise       TrackedExercises[]
}

model TrackedExercises {
  id                      String                   @id @default(uuid())
  trackingId              String
  exerciseId              String?
  status                  String                  
  createdAt               DateTime                 @default(now())
  updatedAt               DateTime                 @updatedAt
  tracking                Tracking                 @relation(fields: [trackingId], references: [id])
  exercise                Exercises?               @relation(fields: [exerciseId], references: [id])
  fkStatus                Status?                  @relation(fields: [status], references: [id])
  trackedExerciseStats    TrackedExerciseStats?
}

model TrackedExerciseStats {
  id                  String                 @id @default(uuid())
  trackedExerciseId   String                 @unique
  sets                Int
  reps                Int
  weight              Int
  createdAt           DateTime            @default(now())
  updatedAt           DateTime            @updatedAt
  trackedExercise     TrackedExercises     @relation(fields: [trackedExerciseId], references: [id])
}