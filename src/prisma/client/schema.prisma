generator client {
  provider = "prisma-client-js"
  output   = "../src/prisma/client"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// MARK: User Plan

model Users {
  id            String          @id @default(cuid())
  email         String          @unique
  name          String
  createdAt     DateTime        @default(now())
  updatedAt     DateTime        @updatedAt
  routines      Routines[]
  sessions      Sessions[]
  exercises     Excercises[]
  notifications Notifications[]
  tracking      Tracking[]
}

model Routines {
  id          Int        @id @default(autoincrement())
  userId      String
  active      Boolean    @default(true)
  days        Int        @default(7)
  initialDate DateTime
  name        String     @unique
  description String?
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt
  user        Users      @relation(fields: [userId], references: [id])
  sessions    Sessions[]
}

model Sessions {
  id          Int          @id @default(autoincrement())
  userId      String
  name        String       @unique
  description String?
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt
  user        Users        @relation(fields: [userId], references: [id])
  routines    Routines[]
  exercises   Excercises[]
}

model Excercises {
  id              Int                    @id @default(autoincrement())
  userId          String
  name            String
  description     String?
  createdAt       DateTime               @default(now())
  updatedAt       DateTime               @updatedAt
  user            Users                  @relation(fields: [userId], references: [id])
  sessions        Sessions[]
  muscles         Muscles[]
  initialStats    ExcerciseInitialStats?
  trackedExercise TrackedExercises[]
}

model ExcerciseInitialStats {
  id         Int        @id @default(autoincrement())
  exerciseId Int        @unique
  sets       Int
  reps       Int
  weight     Int
  createdAt  DateTime   @default(now())
  updatedAt  DateTime   @updatedAt
  exercise   Excercises @relation(fields: [exerciseId], references: [id])
}

// MARK: System tables

model Notifications {
  id        Int      @id @default(autoincrement())
  userId    String
  name      String
  message   String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  user      Users    @relation(fields: [userId], references: [id])
}

model Status {
  id        String     @id
  name      String     @unique
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt
  tracking  Tracking[]
}

model DayTypes {
  id        String     @id
  name      String     @unique
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt
  tracking  Tracking[]
}

model BodySections {
  id             Int              @id @default(autoincrement())
  name           String           @unique
  createdAt      DateTime         @default(now())
  updatedAt      DateTime         @updatedAt
  muscularGroups MuscularGroups[]
}

model MuscularGroups {
  id            Int          @id @default(autoincrement())
  bodySectionId Int
  name          String
  createdAt     DateTime     @default(now())
  updatedAt     DateTime     @updatedAt
  bodySection   BodySections @relation(fields: [bodySectionId], references: [id])
  muscles       Muscles[]
}

model Muscles {
  id              Int            @id @default(autoincrement())
  muscularGroupId Int
  name            String
  createdAt       DateTime       @default(now())
  updatedAt       DateTime       @updatedAt
  muscularGroup   MuscularGroups @relation(fields: [muscularGroupId], references: [id])
  exercises       Excercises[]
}

// MARK: Tracking tables

model Tracking {
  id              Int                @id @default(autoincrement())
  userId          String
  date            DateTime
  status          String
  dayType         String
  notes           String?
  createdAt       DateTime           @default(now())
  updatedAt       DateTime           @updatedAt
  user            Users              @relation(fields: [userId], references: [id])
  fkStatus        Status             @relation(fields: [status], references: [id])
  fkDayType       DayTypes           @relation(fields: [dayType], references: [id])
  trackedExercise TrackedExercises[]
}

model TrackedExercises {
  id                   Int                   @id @default(autoincrement())
  trackingId           Int
  exerciseId           Int
  sets                 Int
  reps                 Int
  weight               Int
  createdAt            DateTime              @default(now())
  updatedAt            DateTime              @updatedAt
  tracking             Tracking              @relation(fields: [trackingId], references: [id])
  exercise             Excercises            @relation(fields: [exerciseId], references: [id])
  trackedExerciseStats TrackedExerciseStats?
}

model TrackedExerciseStats {
  id                Int              @id @default(autoincrement())
  trackedExerciseId Int              @unique
  sets              Int
  reps              Int
  weight            Int
  createdAt         DateTime         @default(now())
  updatedAt         DateTime         @updatedAt
  trackedExercise   TrackedExercises @relation(fields: [trackedExerciseId], references: [id])
}
